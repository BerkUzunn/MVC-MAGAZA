
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">MVC Stok</a>
            </div>
            <ul class="nav navbar-nav">
                <li><a href="/Kategori/Index">Kategoriler</a>    </li>
                <li><a href="/Urunler/Index">Ürünler</a>    </li>
                <li><a href="/Musteriler/Index">Müşteriler</a>    </li>
                <li><a href="/Satıslar/Index">Satışlar</a>    </li>
                <li><a href="/Default/Index">Yardım</a>    </li>
            </ul>
        </div>
        
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
